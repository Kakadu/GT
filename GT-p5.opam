opam-version: "2.0"

name: "GT-p5"
authors: [ "https://github.com/dboulytchev" "https://github.com/Kakadu" ]
version: "0.3.0"
synopsis: "Camlp5 extension for generic programming library GT"
maintainer:  "Kakadu@pm.me"
homepage:    "https://github.com/Kakadu/GT"
bug-reports: "https://github.com/Kakadu/GT/issues"
dev-repo:    "git+https://github.com/Kakadu/GT.git"

build: [
  ["dune" "subst"] {pinned}
  ["dune" "build" "-p" name "-j" jobs]
]

depends: [
  "ocamlfind"  { build }
  "dune"       { build } 
  "ppxlib"     { <= "0.13.0" } 
  "camlp5"     { = "8.00~alpha04" }
]

